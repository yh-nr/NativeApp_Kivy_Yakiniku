Screen: 
    name: 'Page2'
    on_pre_leave:
        camera_ref.play = False
        print("カメラ停止！！！！")
    CameraClick:
        id:cameraclick
        orientation: 'vertical'
        camera_ref:camera_ref
        BoxLayout:
            orientation: 'vertical'
            Camera:
                id:camera_ref
                resolution: (-1, -1)
                play: False
            BoxLayout:
                size_hint_y: 0.3
                padding: 20,30,20,10

                ToggleButton:
                    id:playb
                    text: 'Play'
                    font_size: 30
                    on_press: root.ids.camera_ref.play = not root.ids.camera_ref.play
                    # size_hint_y: None
                    # # height: '48dp'
                Button:
                    id:capb
                    text: 'Capture'
                    font_size: 30
                    # size_hint_y: None
                    # # height: '48dp'
                    on_press: cameraclick.capture()



        

